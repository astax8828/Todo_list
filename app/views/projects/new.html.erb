<h1>Projects#new</h1>

<%= form_with scope: :project, url: projects_path, local: true do |form| %>

  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@project.errors.count, "error") %> prohibited
        this project from being saved:
      </h2>
      <ul>
        <% @project.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label 'Название проекта' %><br>
    <%= form.text_field :name_project %>
  </p>

  <p>
    <%= form.label 'Начало проекта' %><br>
    <%= form.text_field :project_start_date %>
  </p>

  <p>
    <%= form.label 'Описание' %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>